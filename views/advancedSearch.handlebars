                        <option>superhero</option>
                        <option>telenovela</option>
                        <option>variety show</option>
                        <option>western</option>
                    </select>
                </div>

                <!--rating-->
                <div class=form-group>
                    <label for="advSearchRat">entry rating</label>
                    <select multiple class="form-control" id="advSearchRat">
                        <option>1 star</option>
                        <option>1.5 stars</option>
                        <option>2 stars</option>
                        <option>2.5 stars</option>
                        <option>3 stars</option>
                        <option>3.5 stars</option>
                        <option>4 stars</option>
                        <option>4.5 stars</option>
                        <option>5 stars</option>
                    </select>
                </div>

                <!--release year-->
                <div class="form-group">
                    <label for="advSearchRel">search by release year</label>
                    <input type="date" class="form-control" id="advSearchRel">
                </div>

