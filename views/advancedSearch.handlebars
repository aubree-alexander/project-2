                    <label for="advSearchGenTv">genres</label>
                    <select multiple class="form-control" id="advSearchGenTv">
                        <option>action</option>
                        <option>anime</option>
                        <option>cartoon</option>
                        <option>children's show</option>
                        <option>comedy</option>
                        <option>cooking</option>
