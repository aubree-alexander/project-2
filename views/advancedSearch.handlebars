                        <option>Peacock TV</option>
                        <option>Pluto TV</option>
                        <option>Prime Video</option>
                        <option>Showtime</option>
                        <option>Shudder</option>
                        <option>Sling TV</option>
                        <option>Starz</option>
                        <option>Sundance Now</option>
                        <option>Tubi TV</option>
                        <option>Vudu</option>
                    </select>
                </div>

                <!--populates on movie type select-->
