                    <label for="advSearchGenMov">search by genre</label>
                    <select multiple class="form-control" id="advSearchGenMov">
                        <option>action</option>
                        <option>animation</option>
                        <option>biopic</option>
                        <option>comedy</option>
                        <option>drama</option>
